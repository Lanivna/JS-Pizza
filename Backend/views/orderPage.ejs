<% include common/header.ejs %>
<%- include('common/cart.ejs', (typeof cartOptions === 'undefined' ? {} : cartOptions)) %>

<div id="main" class="container-fluid">
    <h1>Order Form</h1>

    <div class="row">
        <div class="col-md-8">
            <form action="" class="form-horizontal">
                <div class="form-group name-group">
                    <label for="input-name" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="input-name" placeholder="Input...">
                    </div>
                    <span class="name-help-block"></span>
                </div>
                <div class="form-group phone-group">
                    <label for="input-phone" class="col-sm-2 control-label">Phone</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="input-phone" placeholder="Input...">
                    </div>
                    <span class="phone-help-block"></span>
                </div>
                <div class="form-group addr-group">
                    <label for="input-addr" class="col-sm-2 control-label">Address</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="input-addr" placeholder="Input...">
                    </div>
                    <span class="addr-help-block"></span>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="information">
                <span>Інформація про замовлення</span>
            </div>
            <div class="time-of-delivering">
                <span>Приблизний час доставки:</span>
                <span>невідомий</span>
            </div>
            <div class="address-of-destination">
                <span>Адреса доставки:</span>
                <span>невідома</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <button class="btn btn-warning" id="btn-order">Order!</button>
        </div>
    </div>
    <div class="row">
        <div class="map map-order" id="map-order">

        </div>
    </div>
</div>

<% include common/footer.ejs %>